		setVisible(true);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		//titlelab,BorderLayout.CENTER
	}

	private  void initGUI(){
		TitleLabel titlelabel=new TitleLabel("Watch Your Step");
		add(titlelabel,BorderLayout.PAGE_START);
	}
